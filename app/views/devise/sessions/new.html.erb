<div class="main-container">
  <header class="fullscreen-element no-pad centered-text okconde">
    <div class="background-image-holder parallax-background overlay">
      <a href="#" class="background-image"> <%= image_tag "background.jpg" %></a>
    </div>

    <div class="container">
      <div class="row">
        <div class="dme col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
          <h1 class="text-white">Login</h1>

          <div class="photo-form-wrapper clearfix">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "form-email" %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-password" %>
              </div>
              <%# if devise_mapping.rememberable? -%>
              <!--                <div class="field">-->
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
              <!--                </div>-->
              <%# end -%>
              <div class="actions">
                <%= f.submit "Log in", class: "login-btn btn-filled" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </header>
</div>

